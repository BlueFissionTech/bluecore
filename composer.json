{
    "name": "bluefission/bluecore",
    "description": "Blue Fission Opus Framework Core",
    "license": "MIT",
    "type": "composer-plugin",
    "keywords": ["framework, core, bluefission, opus"],
    "authors": [
        {
            "name": "Devon Scott",
            "email": "dscott@bluefission.com",
            "homepage": "https://bluefission.com",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/bluefission/develation"
        },
        {
            "type": "vcs",
            "url": "https://github.com/bluefission/automata"
        },
        {
            "type": "vcs",
            "url": "https://github.com/bluefission/simpleclients"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "bluefission/develation": "^1.0.0-alpha",
        "bluefission/automata": "dev-master",
        "bluefission/simpleclients": "dev-master",
        "composer/installers": "^1.11",
        "composer-plugin-api": "^2.0",
        "phpoption/phpoption": "^1.9",
        "botman/botman": "^2.6",
        "phpoffice/phppresentation": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.1@dev",
        "php": ">=8.0.0"
    },
    "autoload": {
        "psr-4": {
            "BlueFission\\": "src/"
        },
        "classmap": [
           "src/"
        ],
        "files": [
            "src/Helpers/global.php",
            "src/Helpers/response.php"
        ]
    },
    "autoload-dev": {
        "psr-4": { 
            "BlueFission\\Tests\\": "tests/" 
        }
    },
    "extra": {
        "class": [
            "BlueFission\\BlueCore\\Installers\\AddOnInstaller",
            "BlueFission\\BlueCore\\Installers\\ThemeInstaller"
        ]
    }
}
